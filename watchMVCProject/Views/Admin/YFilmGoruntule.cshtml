@model List<EntityLayer.Sınıflar.YeniFilmler>
@{
    ViewData["Title"] = "YFilmGoruntule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Vizyona Giren Filmler</h1>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Film Adı</th>
        <th>Film Türü</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.YFilmAdi</td>
            <td>@x.FilmTur.FilmTurAd</td>
            <td><a href="/Admin/YFilmSil/@x.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YFilmGetir/@x.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/YFilmEkle" class="btn btn-primary">Yeni Film Ekle</a>
